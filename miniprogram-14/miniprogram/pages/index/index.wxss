.page-container {
  margin-top: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.page-title {
  font-size: 28px;
  font-weight: bold;
  margin-bottom: 20px;
  color: rgb(54, 54, 54);
}

.button-group {
  display: flex;
  flex-direction: column;
}

button {
  margin-right: 10px;
  padding: 10px;
  background-color: rgb(243, 237, 237);
  color: rgb(17, 17, 17);
  border-radius: 5px;
}